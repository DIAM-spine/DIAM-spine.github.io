
@font-face {
  font-family: 'Montserrat';
  src: url('fonts/Montserrat-VariableFont_wght.ttf') format('truetype');
  font-weight: 300;
  font-style: normal;
}

body {
  margin: 0;
  padding: 0;
  background: #f9f9f9;
  
  display: grid;
  grid-template-areas: 
    "header header header"
    "left   main   right"
    "footer footer right";
  grid-template-columns: 200px 1fr 200px;
  grid-template-rows: auto 1fr auto;
  min-height: 100vh;
}

header {
  grid-area: header;
  background: #ffffff;
  border-bottom: 1px solid #ddd;
  padding: 15px 0;
}

header .container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 0 auto;
}

nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  gap: 20px;
}

nav a {
  text-decoration: none;
  color: #737373;
  font-family: 'Montserrat', sans-serif;
  font-weight: 400;
}

main .container {
  width: 90%;
  margin: 20px auto;
}

footer {
  grid-area: footer;
  background-color: #8FA455;
  border-top: 1px solid #ddd;
  text-align: center;
  padding: 15px 0;
}



.TextWhite {
  font-family: 'Montserrat', sans-serif;
  letter-spacing: 0.5px;
  color: #ffffff;
}

.TextMain {
  font-family: 'Montserrat', sans-serif;
  letter-spacing: 0.5px;
  color: #737373;
}

.TextGreen {
  font-family: 'Montserrat', sans-serif;
  letter-spacing: 0.5px;
  color: #8EA557;
}

.left {
  grid-area: left;
}

.right {
  grid-area: right;
}
